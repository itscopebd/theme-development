
<div id="section-{{ section.id }}" class="about">
    <div class="container">
       <div class="row">
          <div class="col-md-6 offset-md-3">
             <div class="titlepage">
                <h2>{{ section.settings.section_title }}</h2>
                <span>{{ section.settings.description }}</span>
             </div>
          </div>
          <div class="col-md-12">
             <div class="about_img">
                <figure><img src="{{section.settings.about_image | img_url:"master"}}" alt="{{ section.settings.about_image.alt }}"/></figure>
                <a class="read_more" href="{{section.settings.url}}">{{section.settings.btn_text}}</a>
             </div>
          </div>
       </div>
    </div>
 </div>
 
 {%- render 'section_typography' -%}
 

